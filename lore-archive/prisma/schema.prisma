generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Movie {
  id          Int      @id
  title       String
  poster      String?
  releaseDate String?
  category    String
  createdAt   DateTime @default(now())
  
  genres      MovieGenre[]
  ratings     Rating[]
  watchlist   Watchlist[]
}

model MovieGenre {
  id      Int    @id @default(autoincrement())
  movieId Int
  genre   String
  
  movie   Movie  @relation(fields: [movieId], references: [id])
}

model Rating {
  id      Int   @id @default(autoincrement())
  movieId Int   @unique
  value   Float
  
  movie   Movie @relation(fields: [movieId], references: [id])
}

model Watchlist {
  id      Int @id @default(autoincrement())
  movieId Int
  
  movie   Movie @relation(fields: [movieId], references: [id])
}
