generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Movie {
  ownerId     String
  id          Int
  title       String
  poster      String?
  releaseDate String?
  category    String
  createdAt   DateTime @default(now())

  genres    MovieGenre[]
  ratings   Rating[]
  watchlist Watchlist[]

  @@id([ownerId, id])
}

model MovieGenre {
  ownerId String
  id      Int    @id @default(autoincrement())
  movieId Int
  genre   String

  movie   Movie  @relation(fields: [ownerId, movieId], references: [ownerId, id], onDelete: Cascade)
}

model Rating {
  id      Int    @id @default(autoincrement())
  ownerId String
  movieId Int
  value   Float

  movie   Movie @relation(fields: [ownerId, movieId], references: [ownerId, id], onDelete: Cascade)

  @@unique([ownerId, movieId])
}

model Watchlist {
  id      Int    @id @default(autoincrement())
  ownerId String
  movieId Int

  movie   Movie @relation(fields: [ownerId, movieId], references: [ownerId, id], onDelete: Cascade)

  @@unique([ownerId, movieId])
}
